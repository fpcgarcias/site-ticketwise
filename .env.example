# Database
DATABASE_URL=postgresql://username:password@host:5432/database

# API Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5174

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Configuration
EMAIL_PROVIDER=gmail
# Para Gmail:
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Para Brevo (Sendinblue):
# EMAIL_PROVIDER=brevo
# BREVO_EMAIL=your-email@domain.com
# BREVO_PASSWORD=your-brevo-password

# Para SMTP genérico:
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Email Settings
EMAIL_FROM=noreply@ticketwise.com.br
CONTACT_EMAIL=contato@ticketwise.com.br
SEND_CONFIRMATION_EMAIL=true
SEND_WELCOME_EMAIL=true

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Legacy Supabase (pode ser removido após migração completa)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key